<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    style="@style/loginParent"
    tools:context=".Kids.ChooseGameActivity">
    <ScrollView
        style="@style/parent">
        <RelativeLayout
            style="@style/parent">
            <LinearLayout
                android:id="@+id/LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:weightSum="12">
                <LinearLayout
                    style="@style/parent"
                    android:background="@drawable/login_shape_bk"
                    android:orientation="vertical"
                    android:layout_weight="3">
                    <ImageView
                        style="@style/parent"
                        android:background="@drawable/ic_login_bk"
                        android:contentDescription="login background" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/LinearLayout"
                android:layout_alignEnd="@id/LinearLayout">
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/list_item3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img1"
                        style="@style/parent"
                        android:layout_gravity="left"
                        android:layout_width="111dp"
                        android:layout_height="90dp"
                        android:onClick="onClickLittleSuperHero"
                        android:src="@drawable/ic_launcher" />
                    <TextView
                        android:id="@+id/tv1"
                        style="@style/headerText"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:layout_toRightOf="@+id/img1"
                        android:text="Seeker Heroes" />

                </LinearLayout>


                <LinearLayout
                    style="@style/linearParent"
                    android:layout_gravity="center"
                    android:padding="@dimen/loginViewsMargin"
                    android:layout_marginTop="160px">

                    <TextView
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:text = "Escoge un juego"
                        android:id = "@+id/textView"
                        android:textColor = "#000000"
                        android:textSize = "20dp"
                        android:textAlignment="center"/>

                    <Button
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="196dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:text="Buscar palabras"
                        android:onClick="onClickChooseLevel"/>

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
